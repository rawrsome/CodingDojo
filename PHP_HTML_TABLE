<?php
$count = 0;
$users = array( 
   array('first_name' => 'Michael', 'last_name' => 'Choi'),
   array('first_name' => 'John', 'last_name' => 'Supsupin'),
   array('first_name' => 'Mark', 'last_name' => 'Guillen'),
   array('first_name' => 'KB', 'last_name' => 'Tonel'),
   array('first_name' => 'Bob', 'last_name' => 'Billy'),
   array('first_name' => 'George', 'last_name' => 'Jones'),
   array('first_name' => 'Mo', 'last_name' => 'Bo'),
   array('first_name' => 'Hope', 'last_name' => 'Dope'), 
   array('first_name' => 'Phil', 'last_name' => 'Dill'),
   array('first_name' => 'Gill', 'last_name' => 'Smith'),
   array('first_name' => 'Chad', 'last_name' => 'Pill'),
   array('first_name' => 'David', 'last_name' => 'Zee'),
   array('first_name' => 'Mary', 'last_name' => 'Chu'),
   array('first_name' => 'Harry', 'last_name' => 'Tome')
);
?>


<table>
	<tr>
		<th>Users #</th>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Full Name</th>
		<th>Full Name in upper case</th>
		<th>Length of full name</th>
	</tr>




<?php
echo "<tr>";
foreach ($users as $user) {
	$css = 0;
	// $first_last_name = $user['first_name']. " " . ['last_name'];
	$count += 1;
	if($count % 5 === 0) 
	{
		$css = "purple_white";
	}
echo "</tr>";

echo "<tr class=$css>";
$first_last_name = $user['last_name']. " " . $user['first_name'];
echo "<td>$count</td>";
echo "<td>".$user['first_name']."</td>";
echo "<td>".$user['last_name']."</td>";
echo "<td>".$first_last_name."</td>";
echo "<td>".strtoupper($first_last_name)."</td>";
echo "<td>".trim(strlen($user['first_name']."".$user['last_name']))."</td>";
echo "</tr>";
}

echo "</table>";
var_dump($users);
?>
